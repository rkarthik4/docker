FROM debian:stable
LABEL authors="karthiktest"
RUN apt-get update && apt-get install -y --force-yes apache2
RUN mkdir /myapp
WORKDIR /myapp
COPY date.sh .
RUN chmod +x date.sh
ADD https://raw.githubusercontent.com/rkarthik4/ansible/refs/heads/main/testfile.txt .
ENV MYAPP=/myapp
WORKDIR /myapp
#CMD [ "./date.sh" ]
ENTRYPOINT ["/myapp/date.sh"]

